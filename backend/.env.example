# Environment Configuration for Vehicle Health Monitoring Backend

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
PORT=5000

# Model Paths (relative to backend directory)
MODEL_PATH=./models

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Twilio Configuration (SMS Alerts)
# Sign up at https://www.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Google Maps API Configuration
# Enable Maps JavaScript API and Places API at https://console.cloud.google.com/
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Alert Thresholds
ALERT_THRESHOLD_FAILURE=0.7
ALERT_THRESHOLD_RUL=30

# Rate Limiting (seconds between alerts per user)
ALERT_RATE_LIMIT_SECONDS=3600
